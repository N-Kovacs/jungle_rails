<section class="users-new">

<h1>Signup</h1>
<article>

<div class="row">
<div class="col-sm-6 col-sm-offset-1">
<%= form_for :user, url: '/users' do |f| %>

<% if @user.errors.full_messages.length > 0 %>
<div class="alert alert-danger">
  <strong>The following errors prevented saving:</strong>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="form-group">
  First Name:
  <%= f.text_field :firstname, class: 'form-control' %>
  </div>
  <div class="form-group">
  Last Name:    <%= f.text_field :lastname, class: "form-control" %>
  </div>
  <div class="form-group">
  Email: <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
  Password: <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
  Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= submit_tag 'Submit', :class => 'btn btn-primary' %>
  </div>

<% end %>
</div>
</div>
</article>

</section>